@namespace BlazorServerLASViewer.Domains.Well

    <svg>
        <line x1="@X"
                y1="@(Y+Height/2)"
                x2="@(X+Width)"
                y2="@(Y+Height/2)"
                style="stroke: rgb(@R, @G, @B);
                        stroke-width: 1"/>

        <text x="@(X+Width/2)" y="@(Y+Height/2)"
                dominant-baseline="middle"
                text-anchor="middle"
                style="fill: black">
            @LogMnemonic
        </text>
    </svg>

    @code {

        [Parameter]
        public int X { get; set; }

        [Parameter]
        public int Y { get; set; }

        [Parameter]
        public string LogMnemonic { get; set; }

        private int Width => WellViewModel.LogWidth;
        private int Height => WellViewModel.LogHeaderLegendEntryHeight;

        private static Random rnd = new Random();
        private int R = rnd.Next(0, 255);
        private int G = rnd.Next(0, 255);
        private int B = rnd.Next(0, 255);

    }
